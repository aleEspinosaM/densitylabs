<% include ../partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View the most popular campsites</p>
      <!-- this link take us to the route to add new campground -->
      <a class="btn btn-info btn-large" href="/campgrounds/new">Add a new campground</a>
    </div>
  </header>

  <!-- We loop to all the elements in the array of campgrounds and display it -->
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
      <% campgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                  <img src="<%= campground.image %>">
                  <div class="caption">
                      <h4><%= campground.name %></h4>
                  </div>
                      <a class="btn btn-info" href="/campgrounds/<%= campground._id %>">More Info</a>
              </div>
          </div>
      <% }); %>
  </div>
</div>
<hr>
<% include ../partials/footer %>
